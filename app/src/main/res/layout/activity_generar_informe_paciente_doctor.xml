<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content" >

    <ScrollView android:id="@+id/cita_paciente_doctor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RelativeLayout android:id="@+id/page_cita_paciente_doctor_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View   android:id="@+id/_bg__cita_paciente_doctor_ek2"
                    android:background="@drawable/_bg__cita_paciente_doctor_ek2_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="360dp"
                    android:layout_height="640dp" />


                <RelativeLayout android:id="@+id/parte_inicial_arriba_ek3"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView android:id="@+id/nombre_paciente"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="@color/reservar_color"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="52dp"
                        android:layout_width="328dp"
                        android:layout_height="74dp"
                        android:text="@string/nombre_paciente_string"
                        />


                    <RelativeLayout android:id="@+id/home_buttons_ek3"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView android:id="@+id/homeButton"
                            android:src="@drawable/home_ek3"
                            android:contentDescription="home_ek3"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                        <ImageView android:id="@+id/settingsButton"
                            android:src="@drawable/settings_ek3"
                            android:contentDescription="settings_ek3"
                            android:layout_marginStart="278dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                    </RelativeLayout>

                </RelativeLayout>

                <View   android:id="@+id/rectangle_4_ek2"
                    android:background="@drawable/rectangle_4_ek2_shape"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="130dp"
                    android:layout_width="294dp"
                    android:layout_height="390dp" />


                <RelativeLayout android:id="@+id/reservas_boton_ek1"
                    android:layout_marginTop="547dp"
                    android:layout_marginStart="41dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View   android:id="@+id/rectangle_3_ek4"
                        android:background="@drawable/rectangle_3_ek4_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="259dp"
                        android:layout_height="70dp" />

                    <TextView android:id="@+id/generar_informe"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/reservar_color"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="17dp"
                        android:layout_width="261dp"
                        android:layout_height="52dp"
                        android:text="@string/generar_informe_string"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>
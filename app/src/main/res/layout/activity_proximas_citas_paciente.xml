<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content" >

    <ScrollView android:id="@+id/consultar_citas_paciente"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >





            <RelativeLayout android:id="@+id/page_consultar_citas_paciente_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View   android:id="@+id/_bg__consultar_citas_paciente_ek2"
                    android:background="@drawable/_bg__consultar_citas_paciente_ek2_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="360dp"
                    android:layout_height="640dp" />


                <RelativeLayout android:id="@+id/parte_inicial_arriba_ek4"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView android:id="@+id/pr_ximas_citas_ek1"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="@color/reservar_color"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="52dp"
                        android:layout_width="283dp"
                        android:layout_height="74dp"
                        android:text="@string/pr_ximas_citas_ek1_string"
                        />


                    <RelativeLayout android:id="@+id/home_buttons_ek4"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView android:id="@+id/home_ek4"
                            android:src="@drawable/home_ek4"
                            android:contentDescription="home_ek4"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                        <ImageView android:id="@+id/settings_ek4"
                            android:src="@drawable/settings_ek4"
                            android:contentDescription="settings_ek4"
                            android:layout_marginStart="278dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                    </RelativeLayout>

                </RelativeLayout>

                <View   android:id="@+id/rectangle_4_ek3"
                    android:background="@drawable/rectangle_4_ek3_shape"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="150dp"
                    android:layout_width="294dp"
                    android:layout_height="438dp" />

            </RelativeLayout>






        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>